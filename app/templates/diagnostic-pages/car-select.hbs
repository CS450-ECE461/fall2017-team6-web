{{back-button goBack="goBack"}}
<h1>Which car?</h1>

<div class="selections">
  {{#each model as |carUnit|}}
    <label class="" for="option-{{carUnit.id}}">
      <input type="radio" id="option-{{carUnit.id}}" class="" name="carOptions"
      value="{{carUnit.id}}+{{carUnit.carmodel}}+{{carUnit.carimage}}"
        onchange={{action 'selectCar' value="target.value"}} >
        {{car-listing car=carUnit}}
    </label>
  {{/each}}
</div>
<div class="navigation">
  {{#link-to 'dashboard'}}
  <br/>
    <a href="#">Back</a>
  {{/link-to}}
    <a href="#" {{action "nextPage"}}>Next</a>
</div>
